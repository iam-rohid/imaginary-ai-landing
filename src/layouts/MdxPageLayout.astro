---
import Layout from "./Layout.astro";
interface Content {
  title: string;
}

interface Props {
  content: Content;
}

const {
  content: { title },
} = Astro.props;
---

<Layout title={title}>
  <main class="py-16 max-w-2xl mx-auto px-4">
    <header class="text-center mb-8">
      <h1 class="text-4xl font-bold">
        {title}
      </h1>
    </header>
    <article class="prose">
      <slot />
    </article>
  </main>
</Layout>
